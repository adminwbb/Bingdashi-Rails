
<%= stylesheet_pack_tag 'products' %>

<h1> Article List </h1>

<% if @products.empty? %>

  <div class="product-empty-tip" >
  <h4>
    看起来空空如也，要
    <%= link_to '写' , new_product_path  %> 点什么🐎.
    </h4>
  </div>
<% else %>

  <table class="table table-sm table-striped table-hover">
    <tr>
      <th>Title</th>
      <th>Text</th>
    </tr>
  
  <%  %>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.depscription %></td>
        <td><%= link_to 'Show', product_path(product) , { class: 'btn btn-outline-primary' } %></td>
        <td><%= link_to 'Edit',  edit_product_path(product) , { class: 'btn btn-outline-warning'} %></td>
        <td><%= link_to 'Destory', product_path(product), :method => :delete ,:class => 'btn btn-outline-danger' , :data => { :confirm => 'Are you Sure?'  } %></td>
      </tr>
    <% end %>
  </table>

<% end %>